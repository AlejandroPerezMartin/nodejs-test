
doctype html

html

    head

        title Edit profile
        link( rel="stylesheet", type="text/css", href="/css/bootstrap.min.css" )
        link( rel="stylesheet", type="text/css", href="/css/styles.css" )

    body

        div( class="container" )

            div( class="panel panel-default" )

                div( class="panel-heading" )

                    h3( class="panel-title" ) Edit profile

                div( class="panel-body" )

                    - if (fieldErrors)
                        div( class="alert alert-danger" )
                            - each error in fieldErrors
                                p= error.msg

                    form( action="/settings/profile", method="post", enctype="multipart/form-data" )

                        div( class="form-group" )

                            label( for="picture" ) Picture:
                            input( type="file", name="picture", class="form-control" )

                        div( class="form-group" )

                            label( for="name" ) Name:
                            input( type="text", name="name", class="form-control", value=(fieldsData && fieldsData.name) ? fieldsData.name : "" )

                        div( class="form-group" )

                            label( for="surname" ) Surname:
                            input( type="text", name="surname", class="form-control", value=(fieldsData && fieldsData.surname) ? fieldsData.surname : "" )

                        div( class="form-group" )

                            label( for="bio" ) Biography:
                            textarea( name="bio", class="form-control", rows="3", placeholder="Write about yourself, your hobbies, etc.", value=(fieldsData && fieldsData.bio) ? fieldsData.bio : "" )

                        div( class="form-group" )
                            input( type="submit", value="Submit", class="btn btn-primary" )

